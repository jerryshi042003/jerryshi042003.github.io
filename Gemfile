source "https://rubygems.org"

# Use the github-pages gem files
gem "github-pages", group: :jekyll_plugins


# Update if we are on a Windows platform
gem "wdm", "~> 0.1.0" if Gem.win_platform?

# Ensure that the dependencies are in place
group :jekyll_plugins do
  # gem "jekyll-archives"
  gem 'jekyll-feed'
  gem 'hawkins'
  gem "webrick", "~> 1.8"
end

# Uncomment to use Jekyll native
